pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION = "ap-south-1"
    }

    stages {
        stage('Checkout-SCM') {
            steps {
                script {
                    checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/kvmuralikrishna9/Testing.git']])
                }
            }
        }

        stage('Initializing Terraform') {
            steps {
                script {
                    dir('c_eks_from_jenkins') {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Formatting Terraform code') {
            steps {
                script {
                    dir('c_eks_from_jenkins') {
                        sh 'terraform fmt'
                    }
                }
            }
        }

        stage('Validating Terraform code') {
            steps {
                script {
                    dir('c_eks_from_jenkins') {
                        sh 'terraform validate'
                    }
                }
            }
        }

        stage('Destroying the Nginx Application') {
            steps {
                script {
                    dir('c_eks_from_jenkins/ConfigurationFiles') {
                        sh 'aws eks update-kubeconfig --name eks-tf_cluster'
                        sh 'kubectl delete -f service.yaml || true'
                        sh 'kubectl delete -f deployment.yaml || true'
                    }
                }
            }
        }

        stage('Destroying EKS cluster and related infrastructure') {
            steps {
                script {
                    dir('c_eks_from_jenkins') {
                        sh 'terraform destroy --auto-approve'
                    }
                }
            }
        }
    }
}
